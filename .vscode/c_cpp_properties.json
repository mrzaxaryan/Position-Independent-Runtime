{
    "version": 4,
    "enableConfigurationSquiggles": true,
    "env": {
        "windowsIncludePath": [
            "${workspaceFolder}",
            "${workspaceFolder}/include",
            "${workspaceFolder}/include/runtime",
            "${workspaceFolder}/include/runtime/primitives",
            "${workspaceFolder}/include/runtime/platform",
            "${workspaceFolder}/include/runtime/platform/windows",
            "${workspaceFolder}/include/runtime/crypt",
            "${workspaceFolder}/include/runtime/crypt/random",
            "${workspaceFolder}/include/runtime/date_time",
            "${workspaceFolder}/include/runtime/network",
            "${workspaceFolder}/include/runtime/network/tls",
            "${workspaceFolder}/tests"
        ],
        "windowsSourcePath": [
            "${workspaceFolder}/src",
            "${workspaceFolder}/src/runtime",
            "${workspaceFolder}/src/runtime/console",
            "${workspaceFolder}/src/runtime/console/windows",
            "${workspaceFolder}/src/runtime/platform",
            "${workspaceFolder}/src/runtime/platform/windows",
            "${workspaceFolder}/src/runtime/crypt",
            "${workspaceFolder}/src/runtime/crypt/random",
            "${workspaceFolder}/src/runtime/crypt/random/windows",
            "${workspaceFolder}/src/runtime/date_time",
            "${workspaceFolder}/src/runtime/date_time/windows",
            "${workspaceFolder}/src/runtime/network",
            "${workspaceFolder}/src/runtime/network/tls"
        ],
    },
    "configurations": [
        {
            "name": "i386-pc-windows-gnu",
            "compilerPath": "C:/Program Files/LLVM/bin/clang.exe",
            "intelliSenseMode": "windows-clang-x86",
            "cStandard": "c17",
            "cppStandard": "c++23",
            "defines": [
                "ARCHITECTURE_I386",
                "PLATFORM_WINDOWS",
                "PLATFORM_WINDOWS_I386"
            ],
            "includePath": [
                "${windowsIncludePath}",
                "${windowsSourcePath}"
            ],
            "browse": {
                "path": [
                    "${windowsIncludePath}",
                    "${windowsSourcePath}"
                ]
            }
        },
        {
            "name": "x86_64-pc-windows-gnu",
            "compilerPath": "C:/Program Files/LLVM/bin/clang.exe",
            "intelliSenseMode": "windows-clang-x64",
            "cStandard": "c17",
            "cppStandard": "c++23",
            "defines": [
                "ARCHITECTURE_X86_64",
                "PLATFORM_WINDOWS",
                "PLATFORM_WINDOWS_X86_64"
            ],
            "includePath": [
                "${windowsIncludePath}",
                "${windowsSourcePath}"
            ],
            "browse": {
                "path": [
                    "${windowsIncludePath}",
                    "${windowsSourcePath}"
                ]
            }
        },
        {
            "name": "arm7a-pc-windows-gnu",
            "compilerPath": "C:/Program Files/LLVM/bin/clang.exe",
            "intelliSenseMode": "windows-clang-arm",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "defines": [
                "ARCHITECTURE_ARMV7A",
                "PLATFORM_WINDOWS",
                "PLATFORM_WINDOWS_ARMV7A"
            ],
            "includePath": [
                "${workspaceFolder}/src",
                "${workspaceFolder}/src/**",
                "${workspaceFolder}/include",
                "${workspaceFolder}/include/**"
            ]
        },
        {
            "name": "aarch64-pc-windows-gnu",
            "compilerPath": "C:/Program Files/LLVM/bin/clang.exe",
            "intelliSenseMode": "windows-clang-arm64",
            "cStandard": "c17",
            "cppStandard": "c++23",
            "defines": [
                "ARCHITECTURE_AARCH64",
                "PLATFORM_WINDOWS",
                "PLATFORM_WINDOWS_AARCH64"
            ],
            "includePath": [
                "${windowsIncludePath}",
                "${windowsSourcePath}"
            ],
            "browse": {
                "path": [
                    "${windowsIncludePath}",
                    "${windowsSourcePath}"
                ]
            }
        }
    ]
}